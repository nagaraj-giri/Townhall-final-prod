
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- HELPER FUNCTIONS ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isSignedIn() && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }

    function isRfqOwner(rfqId) {
      return isSignedIn() && 
             get(/databases/$(database)/documents/rfqs/$(rfqId)).data.customerId == request.auth.uid;
    }

    // --- COLLECTION RULES ---

    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if (request.auth.uid == userId) || isAdmin();
      allow delete: if isAdmin();
    }

    match /rfqs/{rfqId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); 
      allow update: if isSignedIn(); 
      allow delete: if isAdmin() || (isSignedIn() && resource.data.customerId == request.auth.uid);

      match /matches/{matchId} {
        allow read: if isSignedIn();
        // Allow the RFQ owner to write matches (AIRRA Client Indexing) or Admins
        allow write: if isAdmin() || isSignedIn();
      }
    }

    match /quotes/{quoteId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.providerId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }
    
    match /audit_logs/{logId} {
      allow read: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin(); 
    }

    match /broadcasts/{broadcastId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    match /provider_requests/{requestId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    match /chats/{roomId} {
      function isRoomParticipant() {
        return isSignedIn() && (
          request.auth.uid in resource.data.participants ||
          isAdmin()
        );
      }

      allow read, update: if isRoomParticipant();
      allow create: if isSignedIn() && (request.auth.uid in request.resource.data.participants);
      allow delete: if isAdmin();

      match /history/{messageId} {
        allow read: if isSignedIn() && (
          request.auth.uid == resource.data.senderId || 
          request.auth.uid == resource.data.recipientId ||
          isAdmin()
        );
        allow create: if isSignedIn() && (request.auth.uid == request.resource.data.senderId);
        allow update: if isSignedIn() && (
          request.auth.uid == resource.data.recipientId || isAdmin()
        ) && (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])
        );
      }
    }

    match /notifications/{notifId} {
      allow read: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (resource.data.userId == request.auth.uid || isAdmin());
      allow delete: if isAdmin();
    }

    match /categories/{catId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn(); 
      allow update, delete: if isAdmin();
    }

    match /emails/{emailId} {
      allow create: if isSignedIn();
      allow read, update, delete: if isAdmin();
    }
  }
}
